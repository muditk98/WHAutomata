html
	body
		include navbar.html
		if stack
			h1 #{stack._id}
			hr
			h4 Stack Id :  #{stack._id}
			h4 Location: (#{stack.x}, #{stack.y})
			h4 Processing: #{stack.processing}
			h4 At control room: #{stack.atControl}
			form(method="post" action="/tasks")
				input(type="text" id="id" name="id" value=stack._id readonly style="display:none;")
				if stack.atControl && !stack.processing
					input(type="text" id="cmd" name="cmd" value='r' readonly style="display:none;")
					input(type="submit", value="Return")
				else if !stack.processing
					input(type="text" id="cmd" name="cmd" value='g' readonly style="display:none;")
					input(type="submit", value="Bring")
		else
			p This stack does not exist
