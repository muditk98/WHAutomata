html
    body
        h1  #{product.id} - #{product.name}
        hr
        h3 Product Name :  #{product.name}
        h3 Manufactured on: #{product.batch}
        h3 Expiry:  #{product.expiry}
        h3 Stack:   #{stack.id}
        h3 count of products: #{stack.count}
        div
            h2 Do you want to delete this page?
            form(action="/deleteProduct" method="POST")
                input(type="text" name="id" placeholder="Productid")
                br
                select(name="delete")
                    option(value="No", selected="true") No
                    option(value="Yes") Yes
                
                input(type="Submit" value="Submit")
            
        